<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/layoutchild"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="123dp"
        android:background="@mipmap/maphust1">

        <Button
            android:id="@+id/treearea"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="47dp"
            android:layout_marginEnd="50dp"
            android:layout_marginRight="50dp"
            android:background="@android:color/holo_orange_light" />

        <ImageButton
            android:id="@+id/waterarea"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_above="@+id/treearea"
            android:layout_alignEnd="@+id/treearea"
            android:layout_alignRight="@+id/treearea"
            android:layout_marginBottom="23dp"
            android:background="@android:color/holo_blue_bright"
            app:srcCompat="@android:color/holo_blue_light" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/treearea"
            android:layout_marginEnd="83dp"
            android:layout_marginRight="83dp"
            android:layout_toLeftOf="@+id/treearea"
            android:layout_toStartOf="@+id/treearea"
            app:srcCompat="?android:attr/textSelectHandle" />

    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/imageView3"
        android:layout_alignRight="@+id/imageView3"
        android:layout_below="@+id/layoutchild"
        android:layout_marginTop="33dp"
        app:srcCompat="@android:color/holo_blue_light" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView8"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="17dp"
        android:layout_toEndOf="@+id/imageView8"
        android:layout_toRightOf="@+id/imageView8"
        android:text="Nhấp vào biểu tượng bên trên bản đồ để hiển thị đường đến khu vực lấy nước" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="34dp"
        android:layout_toLeftOf="@+id/textView8"
        android:layout_toStartOf="@+id/textView8"
        app:srcCompat="@android:color/holo_orange_light" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_alignTop="@+id/imageView10"
        android:text="Nhấp vào biểu tượng này trên bản đồ để hiện chi tiết khu vực tước" />

    <TextView
        android:textStyle="bold"
        android:id="@+id/mapmain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView8"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="13dp"
        android:text="Bản đồ chính" />

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp"
        app:srcCompat="@mipmap/logo" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/imageView11"
        android:layout_marginLeft="30dp"
        android:layout_marginStart="30dp"
        android:layout_toEndOf="@+id/imageView11"
        android:layout_toRightOf="@+id/imageView11"
        app:srcCompat="@mipmap/awater" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView11"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignStart="@+id/imageView13"
        android:layout_marginBottom="18dp"
        android:text="Lượng nước còn lại trong bình:20%" />

    <ImageButton
        android:id="@+id/backmainfunction"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/textView8"
        android:layout_alignStart="@+id/textView8"
        android:layout_below="@+id/imageView13"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:background="@android:color/holo_blue_light"
        app:srcCompat="@android:drawable/ic_media_rew" />

</RelativeLayout>